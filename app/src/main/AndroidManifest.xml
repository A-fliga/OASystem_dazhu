<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.oasystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>


    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/mlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mlogo"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".mvp.presenter.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".mvp.presenter.activity.MainActivity" />
        <activity
            android:name=".mvp.presenter.activity.LoginActivity"
            android:launchMode="singleTask" />
        <activity android:name=".mvp.presenter.activity.MySealActivity" />
        <activity android:name=".mvp.presenter.activity.MyOfficeActivity" />
        <activity android:name=".mvp.presenter.activity.OfficeCenterActivity" />
        <activity
            android:name=".mvp.presenter.activity.OfficeDetailActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".mvp.presenter.activity.OfficialDocumentActivity" />
        <activity android:name=".mvp.presenter.activity.OfficialDocumentDetailActivity" />
        <activity android:name=".mvp.presenter.activity.PreViewSignActivity" />
        <activity android:name=".mvp.presenter.activity.ScreenActivity" />
        <activity android:name=".mvp.presenter.activity.OfficialHandleActivity" />

        <activity android:name=".mvp.presenter.activity.TestActivity"></activity>

    </application>

</manifest>